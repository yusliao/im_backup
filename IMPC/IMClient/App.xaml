<Application x:Class="IMClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IMClient"
             ShutdownMode="OnExplicitShutdown" Exit="ApplicationExit">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/IMAssets;component/Assets.xaml" /> 
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type ToolTip}"> 
                <Setter Property="Placement" Value="Right"/>
                <Setter Property="VerticalOffset" Value="-20"/>
            </Style>
        </ResourceDictionary> 
    </Application.Resources>
</Application>
