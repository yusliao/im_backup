                    Visibility="{Binding ChatListVM.IsShowMoreGroupSearch,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <TextBlock Visibility="{Binding ChatListVM.IsGroupExpander,Converter={StaticResource BooleanToVisibilityConverter}}"> 
                            <Run Text="查看更多（"/>
                            <Run Text="{Binding ChatListVM.NoViewGroupNum}"/>
                            <Run Text="条）"/>
                            </TextBlock>
                            <TextBlock Text="收起" Visibility="{Binding ChatListVM.IsGroupExpander,Converter={StaticResource reversBoolToVisibility}}"/>
                        </Grid>
                    </Button>
                    <Border Grid.Row="2" BorderThickness="0" Height="1" Background="#DEDFDF" VerticalAlignment="Bottom"  Visibility="{Binding ChatListVM.IsShowGroupLine,Converter={StaticResource BooleanToVisibilityConverter}}" Margin="8,2,8,0" />
                </Grid>
                <Grid Grid.Row="2" Margin="0,10,0,0" Visibility="{Binding ChatListVM.IsSearchBlackVisibility,Mode=OneWay,Converter={StaticResource BooleanToVisibilityConverter}}">
