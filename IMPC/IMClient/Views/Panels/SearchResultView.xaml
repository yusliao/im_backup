                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                                    <Expander x:Name="expander" IsExpanded="True" Width="220" Style="{StaticResource SearchListExpanderStyle}" >
                                                        <Expander.Header>
                                                            <TextBlock FontSize="14" Text="{Binding Path=Name}" Margin="-5,0,0,0"/>
                                                        </Expander.Header>
                                                        <ItemsPresenter FocusVisualStyle="{x:Null}"/>
                                                    </Expander>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </ListBox.GroupStyle>-->
                    </ListBox>

                    <Button Grid.Row="2" Margin="10,0,0,5"  Style="{StaticResource MoreSearchBtnStyle}" Cursor="Hand" Command="{Binding ChatListVM.MoreSearchContactCommand}"
                        Visibility="{Binding ChatListVM.IsShowMoreContactSearch,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <TextBlock Visibility="{Binding ChatListVM.IsContactExpander,Converter={StaticResource BooleanToVisibilityConverter}}"> 
                            <Run Text="查看更多（"/>
                            <Run Text="{Binding ChatListVM.NoViewContactNum}"/>
                            <Run Text="条）"/>
                            </TextBlock>
                            <TextBlock Text="收起" Visibility="{Binding ChatListVM.IsContactExpander,Converter={StaticResource reversBoolToVisibility}}"/>
                        </Grid>
                    </Button>
                    <Border Grid.Row="2" BorderThickness="0" Height="1" Background="#DEDFDF" VerticalAlignment="Bottom" Margin="8,2,8,0" Visibility="{Binding ChatListVM.IsShowContactLine,Converter={StaticResource BooleanToVisibilityConverter}}"/>

                </Grid>
                <Grid Grid.Row="1" Margin="0,10,0,0"  Visibility="{Binding ChatListVM.IsSearchGroupVisibility,Mode=OneWay,Converter={StaticResource BooleanToVisibilityConverter}}">
