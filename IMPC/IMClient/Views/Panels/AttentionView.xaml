             mc:Ignorable="d">
    <UserControl.Resources>
        <cv:PhoneNumberToView x:Key="ptv"/>
    </UserControl.Resources>

    <Grid>
        <StackPanel Orientation="Vertical" Margin="90,94,90,0">
            <DockPanel LastChildFill="True">
                <Ellipse x:Name="elpHead" Cursor="Hand" Width="60" Height="60" DockPanel.Dock="Right">
                    <Ellipse.Fill>
                        <ImageBrush x:Name="ibHead" ImageSource="{Binding Model.HeadImg,Mode=OneWay}"/>
                    </Ellipse.Fill>
                </Ellipse>

                <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                    <TextBlock  Style="{StaticResource TitleStyle}"  HorizontalAlignment="Left" VerticalAlignment="Top" > 
                    <Run Text="{Binding Model.Name,Mode=OneWay}"/>
                    <ContentControl Content="{Binding Model.Sex,Mode=OneWay}" Style="{StaticResource SexContentStyle}" />
                    </TextBlock>
                </StackPanel>
            </DockPanel>

            <Border BorderThickness="0,1,0,0" BorderBrush="#DAE4F5" Margin="0,40,0,0"/>

            <StackPanel Orientation="Vertical" Margin="0,30,0,0">
                <TextBlock Style="{StaticResource CellTitleStyle}" Margin="10,0,0,30">
            <Run Text="手机号码"  Foreground="{StaticResource LightForeground}" BaselineAlignment="Center"/> 
             <Rectangle Margin="10,0"/>
            <Run Text="{Binding Model.PhoneNumber,Mode=OneWay,Converter={StaticResource ptv}}"/>
                </TextBlock>
                <TextBlock Style="{StaticResource CellTitleStyle}" Margin="10,0,0,10">
            <Run Text="地       区"  Foreground="{StaticResource LightForeground}" BaselineAlignment="Center"/> 
             <Rectangle Margin="10,0"/>
            <Run Text="{Binding Model.Area,Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>

            <Border BorderThickness="0,1,0,0" BorderBrush="#DAE4F5" Margin="0,10,0,0"/>

            <Button x:Name="btnSend" Margin="0,30,0,20" Content="发消息" Style="{StaticResource HightLightButtonStyle}" Command="{Binding JupmToChatCommand,Mode=OneWay}"/>
        </StackPanel>

