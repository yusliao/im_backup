                        <Style TargetType="Button" BasedOn="{StaticResource HightLightButtonStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsSending}" Value="true">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <local:AnimationLoading x:Name="aniLoading" Height="25" Width="25"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsSending}" Value="false">
                                    <Setter Property="Content" Value="重新加载"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            <StackPanel x:Name="sp_Loading" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Visibility="Collapsed">
                <local:AnimationLoading Grid.Column="1" x:Name="aniLoading" Grid.RowSpan="5" Width="20" Height="60" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>-->
        <Grid x:Name="gridLayout" ButtonBase.Click="gridLayout_Click">
            <Grid.RowDefinitions>
                <RowDefinition Height="28"/>
                <RowDefinition Height="28"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="tbName" Text="群公告" FontSize="14" Foreground="#333333"
                   Margin="19,9,19,0" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnClose" Style="{StaticResource CloseButtonStyle}" Uid="Close"/>
            </StackPanel>
            <ScrollViewer Grid.Row="1" Grid.RowSpan="3" Style="{StaticResource ScrollViewerEx}" HorizontalAlignment="Left" Margin="19,10,0,0" VerticalScrollBarVisibility="Auto" Width="353" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="28"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>
                    <TextBlock  Grid.Row="0" TextAlignment="Left" Text="{Binding NoticeModel.NoticeTitle}" Foreground="#333333" FontSize="14" FontWeight="Bold" FontFamily="微软雅黑"/>
                    <TextBlock x:Name="txb_Content" Grid.Row="1" Foreground="#333333" Text="{Binding Content}" TextWrapping="Wrap" FontSize="14"/>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" TextBlock.FontSize="10">
                        <TextBlock x:Name="txb_Input" Foreground="#919191" Text="{Binding SendTime,Converter={StaticResource con_DtCov}}"/>
                        <TextBlock Text="发表" Foreground="#919191" Margin="2,0,0,0"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,18,0">
                <Button x:Name="btnSure" Style="{StaticResource HightLightButtonStyle}"  Width="80" Height="30" Content="我知道了" Uid="Sure"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
